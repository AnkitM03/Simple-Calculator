            <input type="button" value="x" onclick="cal.display.value+='*'" style="background-color: sandybrown;"><br>
            <input type="button" value="9" onclick="cal.display.value+='9'">
            <input type="button" value="C" onclick="cal.display.value=''" style="background-color: red;">
            <input type="button" value="=" onclick="cal.display.value=eval(cal.display.value)" style="background-color: rgb(red, green, blue);">
            <input type="button" value="&#247;" onclick="cal.display.value+='/'" style="background-color: yellow;">
